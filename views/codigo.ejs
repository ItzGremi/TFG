<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Título -->
    <title>JoClock - Código de Recuperación</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="/css/icons/JOCLOCK_ISOTIPO.svg" type="image/x-icon">
    <!-- Estilo externo BoxIcons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <!-- Estilo propio -->
    <link rel="stylesheet" href="/css/iniciosesion.css">
</head>
<body>
    <!-- Formulario -->
    <div class="wrapper">
        <form action="/comprobar-codigo" method="POST">
            <h1>Código de Restablecimiento</h1>
            <div class="input-box">
                <input type="text" name="codigo" placeholder="Código">
            </div>
            
            <button id="enviarCorreoBtn" type="submit" class="btn">Comprobar Código</button>
    
        </form>
    </div>
    <!-- Script SweetAlert librería -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Alertas SweetAlert -->
    <% if(typeof alert != "undefined") { %>
        <script>
            Swal.fire({
                title: '<%= alertTitle%>',
                text: '<%= alertMessage%>',
                icon: '<%= alertIcon%>',
                showConfirmButton: <%= showConfirmButton%>,
                timer: <%= timer%>
            }).then(()=>{
                window.location='/<%=ruta%>'
            })
        </script>
    <% } %>
</body>
</html>
