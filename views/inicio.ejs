    <!-- Script a mano -->
    <script defer src="/css/js/script.js"></script>
</head>
<body>

<!-- Cabecera -->

<header class="cabecera" id="cabecera">
    
    <div class="logo actualLogo">
        <a href="/"><img src="/css/icons/JOCLOCK_LOGOTIPO.svg" alt=""></a>
    </div>

    <!-- Contenedor para los elementos de navegación -->
    <nav class="opciones-navegacion">
        <a href="/fichar" class="cabecera-link" id="primero">Fichar</a>
        <a href="/tareas" class="cabecera-link">Tareas</a>
        <a href="/noticias" class="cabecera-link" id="ultimo">Noticias</a>
    </nav>
    
    <div class="modo" id="modo">
        <img src="/css/icons/moon.png" alt="" id="modo-icono">
        <p id="modo-texto">Modo oscuro</p>
    </div>
    
    <div class="apartado-sesion">
        <div class="apartado-sesion-principal">
            <div class="logo-sesion">
                <a href="<%= login ? 'cerrarsesion' : 'iniciosesion' %>">
                    <i class="bi bi-person-bounding-box"></i>
                </a>
            </div>
            <div class="nombre-sesion">
                <% if(login) { %>
                    <a href="cerrarsesion"><h4><%= usuario %></h4></a> 
                <% } else { %>
                    <h4></h4>
                <% } %>
            </div>
        </div>
        <div class="opcion-sesion">
            <% if(login) { %>
                <a href="cerrarsesion">Cerrar sesión</a>
            <% } else { %>
                <a href="iniciosesion">Iniciar sesión</a>
            <% } %>
        </div>
    </div>

    <button id="menu-boton" class="intercambio-navegacion">
        &#9776
    </button>
</header>

<!-- Carrusel -->

<div class="contenedor-carrusel">
    <div id="carouselExampleCaptions" class="carousel slide">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/css/img/andrew-neel-cckf4TsHAuw-unsplash.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/css/img/tyler-franta-iusJ25iYu1c-unsplash.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/css/img/sean-pollock-PhYq704ffdA-unsplash.jpg" class="d-block w-100" alt="...">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
