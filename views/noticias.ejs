<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Noticias</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <!-- Cabecera -->
    

    
    <!-- Noticias -->

    <div class="container-fluid">
        <a href="/noticias_crear" class="btn btn-outline-primary mt-4 btn-lg">SUBIR NOTICIA <i class="bi bi-plus-circle"></i></a>
    </div>
    
    <div class="contenedor-noticias">
        <% resultados.forEach((noticia)=> { %>
            <div class="noticia">
                <div class="texto-noticia">
                    <p><%= noticia.noticia %></p>
                </div>
                <div class="usuario-noticia">
                    <p><%= noticia.usuario %></p>
                </div>
                <div class="fecha-noticia">
                    <p><%= noticia.fecha_publicacion %></p>
                </div>
                <div class="modificar-noticia">
                    <% if (noticia.usuario === usuario) { %>
                        <a href="/noticia_editar/<%= noticia.id %>" class="btn btn-outline-info"><i class="bi bi-pencil-square"></i></a>
                        <a href="/noticia_eliminar/<%= noticia.id %>" class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i></a>
                    <% } %>
                </div>
                
            </div>
        <% }); %>
    </div>
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
